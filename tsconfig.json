{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "removeComments": true,
    "sourceMap": true,
    "strict": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
